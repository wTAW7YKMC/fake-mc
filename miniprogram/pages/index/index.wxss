.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(to bottom, #87CEEB, #E0F7FA);
}

.start-screen {
  text-align: center;
  background-color: rgba(0, 0, 0, 0.7);
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.5);
}

.title {
  color: white;
  font-size: 48rpx;
  margin-bottom: 30rpx;
  text-shadow: 0 0 10rpx #00BFFF;
}

.start-button {
  background-color: #4CAF50;
  border: none;
  color: white;
  padding: 15rpx 32rpx;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 28rpx;
  margin: 4rpx 2rpx;
  cursor: pointer;
  border-radius: 12rpx;
  transition: background-color 0.3s;
}

.start-button:hover {
  background-color: #45a049;
}